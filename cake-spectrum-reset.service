[Unit]
Description=Nightly CAKE Reset for Spectrum
After=network-online.target

[Service]
Type=oneshot
User=kevin
WorkingDirectory=/home/kevin/adaptive_cake_spectrum
ExecStart=/usr/bin/python3 /home/kevin/adaptive_cake_spectrum/adaptive_cake_spectrum.py --reset
StandardOutput=journal
StandardError=journal
SyslogIdentifier=cake-spectrum-reset

[Install]
WantedBy=multi-user.target
